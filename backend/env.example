# Server Configuration (Rebrand: port 5001, main uses 5000 or 3000)
PORT=5001
NODE_ENV=production
FRONTEND_URL=
BASE_URL=https://drive-rwanda-prep.cyangugudims.com

# Database Configuration (Rebrand uses separate DB from main)
# Create DB: CREATE DATABASE rw_driving_prep_db;
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=rw_driving_prep_db
DB_PORT=3306

# Production MySQL URL (optional - can use individual variables above)
# DATABASE_URL=mysql://username:password@host:port/database

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@your-domain.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Payment Configuration
PAYMENT_WEBHOOK_SECRET=your-payment-webhook-secret

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
DEVICE_ID_ENCRYPTION_KEY=your-device-encryption-key

# Swagger Configuration
SWAGGER_TITLE=Drive Rwanda - Prep & Pass API
SWAGGER_VERSION=1.0.0
SWAGGER_DESCRIPTION=API documentation for Drive Rwanda - Prep & Pass

# Database Initialization (Production Safety)
# Set to 'false' to disable automatic table/column creation on startup
# Use migrations or manual initialization for production databases
AUTO_DB_INIT=true